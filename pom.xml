<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <name>FOSS Nova IO Commons</name>
  <groupId>org.fossnova</groupId>
  <artifactId>fossnova-io</artifactId>
  <version>1.0.0.Beta1-SNAPSHOT</version>
  <url>http://fossnova.org/io</url>

  <parent>
    <groupId>org.fossnova</groupId>
    <artifactId>fossnova-maven-parent</artifactId>
    <version>1.0.1-SNAPSHOT</version>
  </parent>

  <scm>
    <connection>scm:git:git@github.com:fossnova/io.git</connection>
    <developerConnection>scm:git:git@github.com:fossnova/io.git</developerConnection>
    <url>http://github.com/fossnova/io</url>
  </scm>

  <issueManagement>
    <system>github</system>
    <url>https://github.com/fossnova/io/issues</url>
  </issueManagement>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <sourceDirectory>${project.build.sourceDirectory}</sourceDirectory>
          <configLocation>${project.baseUri}/checkstyle/api.xml</configLocation>
          <failsOnError>false</failsOnError>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
